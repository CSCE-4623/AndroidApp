<RelativeLayout android:background="#e1e1e1"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cart"
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:layout_above="@id/layout_subtotal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layout_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_taxes"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:weightSum="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="end"
        android:text="Sub Total : "
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/tv_taxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:text="0 $"
        android:textSize="20dp">

    </TextView>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/layout_taxes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/layout_total"
    android:layout_marginTop="0dp"
    android:padding="5dp"
    android:weightSum="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="end"
        android:text="Taxes (9.75%): "
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/tv_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:text="0 $"
        android:textSize="20dp">

    </TextView>

</LinearLayout>
    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_pickUpBy"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="end"
            android:text="Total : "
            android:textStyle="bold"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textStyle="bold"
            android:text="0 $"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_pickUpBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_placeorder"
        android:layout_marginTop="0dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Pick up date "
            android:textSize="20dp"
            android:textStyle="italic">

        </TextView>

        <TextView
            android:id="@+id/tv_pickUpBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aug, 27th at 9:00 AM"
            android:textSize="20dp"
            android:textStyle="italic" >

        </TextView>
    </LinearLayout>


    <Button
        android:id="@+id/btn_placeorder"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:onClick="insertOrder"
        android:text="Place Order"
        android:textColor="@android:color/white"
        android:theme="@style/Theme.MaterialButton"
        android:backgroundTint="@android:color/holo_red_dark">
    </Button>

</RelativeLayout>